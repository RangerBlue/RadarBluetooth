<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kamil.br"
    android:installLocation="preferExternal">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.mapping.measurement.MeasurementChooseOption" />
        <activity android:name=".activities.mapping.results.BluetoothResultsChooseRoom" />
        <activity android:name=".activities.main.BluetoothFinder" />
        <activity android:name=".activities.main.Radar" />
        <activity android:name=".activities.main.Settings" />
        <activity android:name=".activities.main.Tracking" />
    </application>

</manifest>
