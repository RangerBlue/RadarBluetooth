<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:shrinkColumns="*"  android:stretchColumns="*"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".activities.MainActivity"
    android:background="@color/bright_foreground_inverse_material_dark">


    <TableRow
        android:padding="5dp"
        android:layout_weight="2">
        <TextView
            android:id="@+id/textview_title"
            android:text="RadarBluetooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:background="@color/bright_foreground_material_light"

            android:singleLine="true"

            android:textColor="@color/colorPrimaryDark"
            android:layout_column="1"
            />

        <ImageButton
            android:id="@+id/button_enableBT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src = "@drawable/bt_icon_red"
            android:background="@null"
            android:layout_column="2" />
    </TableRow>

    <TableRow
        android:padding="5dp"
        android:layout_weight="1">
        <Button
            android:id="@+id/button_scanBT"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/measurement"
            android:background="@color/colorPrimaryDark"
            android:layout_span="3"/>
    </TableRow>

    <TableRow
        android:padding="5dp"
        android:layout_weight="1">
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_edit_room"
            android:id="@+id/button_edit_room"
            android:background="@color/colorPrimaryDark"
            android:layout_span="3"/>
    </TableRow>

    <TableRow
        android:padding="5dp"
        android:layout_weight="1">
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Path"
            android:id="@+id/button_path"
            android:background="@color/colorPrimaryDark"
            android:layout_span="3"
             />
    </TableRow>

    <TableRow
        android:padding="5dp"
        android:layout_weight="1">
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/map"
            android:id="@+id/button_map"
            android:background="@color/colorPrimaryDark"
            android:layout_span="3"
             />
    </TableRow>

    <TableRow
        android:padding="5dp"
        android:layout_weight="1">
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/radar"
            android:id="@+id/buttton_radar"
            android:background="@color/colorPrimaryDark"
            android:layout_span="3" />
    </TableRow>

    <TableRow
        android:padding="5dp"
        android:layout_weight="1">
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/search_devices"
            android:id="@+id/button_search_devices"
            android:background="@color/colorPrimaryDark"
            android:layout_span="3"/>
    </TableRow>

</TableLayout>

