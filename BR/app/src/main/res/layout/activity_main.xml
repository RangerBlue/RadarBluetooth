<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/colorBackground"
    tools:context=".activities.MainActivity"
    >

    <TableRow
        android:background="@color/colorPrimaryDark"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mapping"
            android:id="@+id/textView_mapping"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bluetooth"
            android:id="@+id/textView_enable_bt"
            android:layout_gravity="center" />
    </TableRow>
    <TableRow
        android:padding="5dp"
        android:layout_weight="1"
        >

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/map"
            android:src = "@drawable/mapping_icon"
            android:background="@null"
            android:id="@+id/button_map"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            />



        <ImageButton

            android:id="@+id/button_enableBT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src = "@drawable/bt_icon_red"
            android:background="@null"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            />
    </TableRow>

    <TableRow
        android:background="@color/colorPrimaryDark">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tracking"
            android:id="@+id/textView_tracking"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radar"
            android:id="@+id/textView_radar"
            android:layout_gravity="center" />
    </TableRow>

    <TableRow
        android:paddingBottom="5dp"
        android:layout_weight="1"
        >

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/search_devices"
            android:id="@+id/button_tracking_device"
            android:src = "@drawable/tracking_icon"
            android:background="@null"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            />

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/radar"
            android:id="@+id/buttton_radar"
            android:src = "@drawable/radar_icon"
            android:background="@null"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

    </TableRow>

    <TableRow
        android:background="@color/colorPrimaryDark">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_devices"
            android:id="@+id/textView_search_devices"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:id="@+id/textView_settings"
            android:layout_gravity="center" />
    </TableRow>

    <TableRow
        android:paddingBottom="5dp"
        android:layout_weight="1"
        >
        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/search_devices"
            android:id="@+id/button_search_devices"
            android:src = "@drawable/search_devices_icon"
            android:background="@null"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>



        <ImageButton
            android:id="@+id/button_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src = "@drawable/settings_icon"
            android:background="@null"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            />

    </TableRow>

</TableLayout>

