<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*"
    android:background="@color/colorBackground"
    tools:context="com.example.kamil.br.activities.mapping.measurement.MeasurementView">

    <TableRow
        android:layout_weight="1">
        <com.example.kamil.br.views.MapDrawView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/viewMapDraw"
            android:layout_span="2"
            />
    </TableRow>
    <TableRow
        android:layout_weight="1">
        <ImageButton
            android:id="@+id/buttonMeasurementViewerInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src = "@drawable/info_icon"
            android:background="@null"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:layout_column="0"
            />

        <ImageButton
            android:id="@+id/buttonMeasurementViewerClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src = "@drawable/confirm_icon"
            android:background="@null"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:layout_column="1"
            />
    </TableRow>

</TableLayout>
