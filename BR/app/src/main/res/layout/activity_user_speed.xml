<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_speed"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*"
    android:shrinkColumns="*"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kamil.br.activities.UserSpeed">

    <TableRow>
        <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/speed"
        android:textSize="@dimen/big_font"
        android:layout_gravity="center"
            />

        <TextView
            android:text="@string/meter_per_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TextViewMetersPerSecond"
            android:textSize="@dimen/big_font"
            android:layout_gravity="center"/>
    </TableRow>

    <TableRow>
        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/speedKm"
            android:textSize="@dimen/big_font"
            android:layout_gravity="center"
            />

        <TextView
            android:text="@string/kilometer_per_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TextViewKilometersPerHour"
            android:textSize="@dimen/big_font"
            android:layout_gravity="center"/>
    </TableRow>



    <TableRow>
        <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSpeedStartStop" />
    </TableRow>
    <TableRow>
        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewResult" />
    </TableRow>


</TableLayout>
